{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build in debug mode",
			"command": "g++",
			"args": [
				"-g",
				"${fileDirname}\\main.cpp",
				"-o",
				"${fileDirname}\\main.out"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	],
	"version": "2.0.0"
}
